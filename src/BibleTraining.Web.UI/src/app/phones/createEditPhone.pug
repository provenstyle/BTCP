div
    .row.wrapper.border-bottom.white-bg.page-heading
        .col-lg-10
            h2 {{ctrl.title}}
            ol.breadcrumb
                li
                    a(href="#!/phones/showPhones") Phones
                li(ng-if="ctrl.isEdit")
                    a(href="#!/createPhone/showCreatePhone") Create Phone
                li.active(ng-if="ctrl.isCreate")
                    strong Create Phone

    .wrapper.wrapper-content
        .row
            .col-lg-12
                .ibox-content
                    form.form-horizontal
                        .form-group
                            label.col-lg-2.control-label Name
                            .col-lg-10
                                input.form-control(type="text" placeholder="Name" ng-model="ctrl.phone.name")
                                div.text-danger(ng-messages='ctrl.$validation.phone.name.errors')
                                    div.small(ng-message='presence') Phone name is required
                        .form-group
                            label.col-lg-2.control-label Description
                            .col-lg-10
                                input.form-control(type="text" placeholder="Description" ng-model="ctrl.phone.description")
                                div.text-danger(ng-messages='ctrl.$validation.phone.description.errors')
                                    div.small(ng-message='presence') Phone description is required
                        .form-group
                            .col-lg-offset-2.col-lg-10
                                 button.btn.btn-sm.btn-white(type="submit" ng-click="ctrl.cancel()") Cancel
                                 button.btn.btn-sm.btn-primary(type="submit" ng-click="ctrl.save()") {{ctrl.buttonText}}
                                 a.btn.btn-link.pull-right(ng-if="ctrl.idEdit" ng-click="ctrl.remove()") Delete
