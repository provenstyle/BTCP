@model BibleTraining.Web.UI.Features.Home.HomeData

<!DOCTYPE html>
<html>
<head>
    <base href="@Model.BaseUrl" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Bible Training</title>
    <link rel="icon" type="image/png" href="favicon.ico">

    <!-- build:css styles/style.css -->
    <link rel="stylesheet" href="styles/style.css">
    <!-- endbuild -->
    <!-- build:js scripts/preload.js -->
    <script src="bower_components/modernizr/modernizr.js"></script>
    <!-- endbuild -->
</head>
<body ng-app="bt">

    <div class="error-banner" ng-include="'app/error/error.html'"></div>

    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#top-navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="#/" class="navbar-brand">Bible Training</a>
            </div>
            <div class="navbar-collapse collapse" id="top-navbar">
                <ul class="nav navbar-nav">
                    <li ng-class="{ active: $state.includes('searchProductGroups') }"><a href="#/">Classes</a></li>
                    <li ng-class="{ active: $state.includes('searchProductTypes') }"><a href="#/searchProductTypes">Students</a></li>
                    <li ng-class="{ active: $state.includes('searchProductTypes') }"><a href="#/searchProductTypes">Teachers</a></li>
                </ul>
                <p class="navbar-right navbar-text padding-large-right">Logged in as: @Model.UserName</p>
            </div>
        </div>
    </div>

    <div class="navbar navbar-fixed-bottom navbar-inverse">
        <div class="container-fluid">
            <p class="navbar-text navbar-right text-right  padding-large-right">
                @string.Format("Version: v{0}", Model.Version)<br />
                &copy;2013 - @DateTime.Today.Year All Rights Reserved.
            </p>
        </div>
    </div>

    <div ui-view>
        <div class="container-fluid">
            <h6 class="loading-img-wheel"></h6>
            <h4 class="text-center">processing...</h4>
        </div>
    </div>

    <script>
        var appConfig = {
            applicationName: "@Model.ApplicationName",
            clientIp:        "@Model.ClientIP",
            dataApiBaseUrl:  "@Model.DataApiBaseUrl",
            locale:          "@Model.Locale",
            version:         "@Model.Version"
        }
    </script>

    <!-- build:js scripts/app.js -->
    <script src="scripts/vendor.js"></script>
    <script src="scripts/app.js"></script>
    <script src="app/templates.js"></script>
    <!-- endbuild -->

</body>
</html>
